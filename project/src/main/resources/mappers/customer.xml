<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.project.DAO.customerMapper">

<!-- 회원가입 : Code here -->
<insert id="signup" parameterType="customer">
INSERT INTO CUSTOMER(

	 CUSTOMER_ID
	,CUSTOMER_PW
	,CUSTOMER_NAME
	,CUSTOMER_ADDRESS
	,CUSTOMER_BIRTHDATE
	,CUSTOMER_NICKNAME
	,CUSTOMER_PHONE
	,CUSTOMER_GENDER
	,CUSTOMER_EMAIL

)VALUES(
	
	 #{customer_id}
	,#{customer_pw}
	,#{customer_name}
	,#{customer_address}
	,#{customer_birthdate}
	,#{customer_nickname}
	,#{customer_phone}
	,#{customer_gender}
	,#{customer_email}

)

</insert>

<select id="checkid" resultType="customer">
SELECT
	CUSTOMER_ID
FROM
	CUSTOMER

</select> 

<select id="login" resultType="customer" parameterType="customer">
SELECT
	 CUSTOMER_ID
	,CUSTOMER_PW
FROM
	CUSTOMER
WHERE
	CUSTOMER_ID=#{customer_id}
	AND
	CUSTOMER_PW=#{customer_pw}
</select>

</mapper>